<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_activity_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/main_activity_swiperefrshlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/snow_white"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:id="@+id/main_activity_toolbar"
                app:theme="@style/MyToolBarTheme"
                app:popupTheme="@style/ToolbarPopupTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize"
                android:background="@color/deep_sky_blue"
                >

            </android.support.v7.widget.Toolbar>

            <ListView
                android:id="@+id/main_activity_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@color/snow_white"
                android:divider="@null"
                android:scrollbarSize="30dp"
                android:dividerHeight="10dp">
            </ListView>

            </LinearLayout>

    </android.support.v4.widget.SwipeRefreshLayout>

    <fragment
        android:id="@+id/drawlayout_fragment"
        android:name="com.example.chenjensen.ipm.fragment.DrawLayoutFragment"
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        />

</android.support.v4.widget.DrawerLayout>
